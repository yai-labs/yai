#!/usr/bin/env bash
set -euo pipefail

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)"
INFRA_ROOT_DEFAULT="$(cd "$ROOT/.." && pwd)/yai-infra"
INFRA_ROOT="${YAI_INFRA_ROOT:-$INFRA_ROOT_DEFAULT}"
TARGET="$INFRA_ROOT/tools/bin/yai-docs-graph"

if [[ -x "$TARGET" ]]; then
  exec "$TARGET" "$@"
fi

echo "Hard cutover: use yai-infra canonical tool for yai-docs-graph" >&2
echo "Missing target: $TARGET" >&2
exit 2
