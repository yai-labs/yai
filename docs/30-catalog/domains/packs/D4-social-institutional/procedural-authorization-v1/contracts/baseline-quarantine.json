{
  "baseline_id": "baseline-quarantine",
  "baseline_version": 1,
  "policy": {
    "procedures": {
      "mode": "deny_or_quarantine_on_violation",
      "procedures": {
        "PROC-CASE-APPROVAL": {
          "version": 1,
          "steps": {
            "STEP-01-RECEIVE": { "required_role": "operator", "arming_required": false, "prereq": [] },
            "STEP-02-REVIEW": { "required_role": "reviewer", "arming_required": false, "prereq": ["STEP-01-RECEIVE"] },
            "STEP-03-APPROVE": { "required_role": "supervisor", "arming_required": true, "prereq": ["STEP-02-REVIEW"] }
          }
        }
      },
      "on_violation": {
        "not_authorized": { "outcome": "deny", "reason_code": "PROCEDURE_STEP_NOT_AUTHORIZED" },
        "arming_missing": { "outcome": "deny", "reason_code": "ARMING_REQUIRED" },
        "sequence_violation": { "outcome": "deny", "reason_code": "PROCEDURE_SEQUENCE_VIOLATION" },
        "context_missing": { "outcome": "deny", "reason_code": "PROCEDURE_CONTEXT_MISSING" }
      }
    }
  }
}
